{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",

    "strict": true,

    "types": ["node"], 
    "rootDir": ".", 
    "outDir": "./dist", 
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*", 
    "prisma.config.ts", 
    "prisma/**/*" 
  ],
  "exclude": ["node_modules", "dist", "generated"] 
}
